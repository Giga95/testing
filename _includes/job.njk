---
layout: 'base.njk'
---

    <main>
      <section class="half-heading">
        <div class="page-heading career-page post">
          <h2>{{title}}</h2>
        </div>
      </section>
      <section class="job-post-section">
        <div class="container">
          <div class="article-text">
              {{ content | safe }}
          </div>
        </div>
      </section>

      <hr />
      <section class="job-apply-form-white">
        <div class="container">
          <div class="contact-form">
            <div class="wrapper">
              <form action="#">
                <div class="dbl-field">
                  <div class="field">
                    <label for="fname">First Name *</label>
                    <input
                      type="text"
                      name="firstName"
                      id="fname"
                      placeholder="First Name"
                      required
                    />
                  </div>
                  <div class="field">
                    <label for="lname">Last Name *</label>
                    <input
                      type="text"
                      name="lastName"
                      id="lname"
                      placeholder="Last Name"
                      required
                    />
                  </div>
                </div>
                <div class="dbl-field">
                  <div class="field">
                    <label for="email">Email *</label>
                    <input
                      type="email"
                      name="email"
                      id="email"
                      placeholder="Email"
                      required
                    />
                  </div>
                  <div class="field">
                    <label for="pnumber">Phone Number *</label>
                    <input
                      type="text"
                      name="phoneNumber"
                      id="pnumber"
                      placeholder="Phone Number"
                      required
                    />
                  </div>
                </div>
                <div class="dbl-field">
                  <div class="field upload">
                    <input type="file" name="cv" id="cv" required />
                    <div class="upload-label"></div>
                  </div>
                  <div class="field upload">
                    <input
                      type="file"
                      name="coverLetter"
                      id="cover-letter"
                      required
                    />
                    <div class="upload-label"></div>
                  </div>
                </div>

                <div class="button-area">
                  <span>Sending your message...</span>
                  <button type="submit">Submit</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </section>
    </main>

